<% if @user.errors.any? %>
  <div id="error_explanation"> 
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </div>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.label :email, 'gimme your email:' %>
  <%= form.email_field :email, placeholder: "example@example.com" %>
  <%= form.label :username, 'now your username:'%>
  <%= form.text_field :username, value: "cooldude123" %>
  <%= form.label :password, 'okay, now whisper me your password:' %>
  <%= form.password_field :password %>
  <%= form.submit "Submit" %>
<% end %>
