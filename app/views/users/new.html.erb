<% if false %>
  <form action="/users" method="post" accept-charset="UTF-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="email">Email:</label>
    <input type="email" name="user[email]" id="email">
    <label for="username">Username:</label>
    <input type="text" name="user[username]" id="username">
    <label for="password">Password:</label>
    <input type="password" name="user[password]" id="password">
    <input type="submit" value="Submit">
  </form>


  <%= form_tag("/users", method: "post") do %>
    <%= label_tag(:email, "Email:") %>
    <%= email_field_tag(:email) %>
    <%= label_tag(:username, "Username:") %>
    <%= text_field_tag(:username) %>
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %>
    <%= submit_tag("Submit") %>
  <% end %>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.label :email, 'gimme your email:' %>
  <%= form.email_field :email, placeholder: "example@example.com" %>
  <%= form.label :username, 'now your username:'%>
  <%= form.text_field :username, value: "cooldude123" %>
  <%= form.label :password, 'okay, now whisper me your password:' %>
  <%= form.password_field :password %>
  <%= form.submit "Submit" %>
<% end %>
